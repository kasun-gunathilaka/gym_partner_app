<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/notification_key"
        android:title="@string/pref_title_notifications" />

    <ListPreference
        android:defaultValue="-1"
        android:dependency="@string/notification_key"
        android:entries="@array/pref_notification_frequency_title"
        android:entryValues="@array/pref_notification_frequency_values"
        android:key="@string/notification_frequency_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_notification_frequency" />

    <ListPreference
        android:defaultValue="-1"
        android:dependency="@string/notification_key"
        android:entries="@array/pref_notification_time_title"
        android:entryValues="@array/pref_notification_time_values"
        android:key="@string/notification_time"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_notification_time" />

</PreferenceScreen>
